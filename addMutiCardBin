        <td>
          <textarea name="cardNo" class="dropth" cols="150" rows="15" onkeypress"autoAddDot()">
          </textarea><br/>
        </td>
      </tr>
      <tr>
        <td height="37">
          <div align="center">
            <input type="button" value="确定" onclick="fillCard()" />
            <input type="button" value="关闭" onclick="closeDiv()" />
          </div>
        </td>
      </tr>
